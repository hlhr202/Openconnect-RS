{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "openconnect-gui",
    "version": "0.0.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/disconnected.png",
      "iconAsTemplate": true
    },
    "macOSPrivateApi": true,
    "allowlist": {
      "globalShortcut": {
        "all": true
      },
      "fs": {
        "scope": ["$RESOURCE/*"]
      },
      "all": false,
      "app": {
        "all": true,
        "show": true,
        "hide": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setClosable": true
      }
    },
    "windows": [
      {
        "title": "openconnect-gui",
        "width": 900,
        "height": 800,
        "transparent": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.openconnect-gui.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "vpnc-script",
        "vpnc-script-win.js",
        "wintun.dll",
        "icons/connected.png",
        "icons/disconnected.png"
      ]
    }
  }
}
